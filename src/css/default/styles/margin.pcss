}

@for $count from 1 to 10 by 1 {
.mr-$count {
    margin-right: calc($margin-unit * $count) !important;
}}

@for $count from -10 to -1 by 1 {
.mr-n$count {
    margin-right: calc($margin-unit * $count) !important;
}}

